<head>

	@model proj.RegisterUser

	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
	<script>
		$(document).ready(function(){


		})
	</script>
</head>
<body>

	<h3>Login</h3>

	@ViewBag.Log
	<form action="login" method=post>
		Username: <input type=text name="name"><br>
		Password: <input type=password name="pass"><br>
		<input type=submit value="Log in">
	</form>

	<h3>Registration</h3>

	<form asp-controller="proj" asp-action="Register" method=post>

		<span asp-validation-for="Username"></span>
		<label asp-for="Username"></label>
			<input asp-for="Username"><br>

		<span asp-validation-for="First"></span>
		<label asp-for="First"></label>
			<input asp-for="First"><br>

		<span asp-validation-for="Last"></span>
		<label asp-for="Last"></label>
			<input asp-for="Last"><br>

		<span asp-validation-for="Password"></span>
		<label asp-for="Password"></label>
			<input asp-for="Password"><br>

		<span asp-validation-for="Confirm"></span>
		<label asp-for="Confirm"></label>
			<input asp-for="Confirm"><br>

		<button type="submit">Register</button>

	</form>

</body>
